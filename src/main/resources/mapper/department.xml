<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Property.Mapper.DepartmentMapper">
	<resultMap id="department" type="com.Property.Entity.Department">
		<id column="dept_id" property="dept_id" jdbcType="CHAR"/>
		<result column="dept_name" property="dept_name" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="BaseColumnList">
		dept_id,dept_name
	</sql>

	<select id="getAll" resultMap="department">
		SELECT
		<include refid="BaseColumnList"/>
		FROM department
	</select>
</mapper>